{>layout/}

{<style}
	<style>
		#columns div ul {
			-moz-column-count:3;
			-webkit-column-count:3;
			column-count:3;
		}
		.swatch {
			display: inline-block;
			text-align: center;
			padding: 6px;
			border: 1px solid #ccc;
			margin: 7px;
		}
		.swatch:hover {
			border-color: #777;
		}
		.swatch-image {
			width: 125px;
			height: 70px;
			margin: 0 auto;
			color: #777;
			line-height: 18px;
			padding-top: 20px;
		}
		.swatch-text {
			color: #777;
			font-size: 13px;
			line-height: 18px;
		}
		.swatch a {
			text-decoration: none;
		}
		.swatch-price {
			font-weight: 700;
		}

		#starting-at {
			margin: 0 !important;
    		text-align: left;
    		font-style: italic;
		}
		.swatch-text > p {
			margin:0;
			display: block;
		}
		.blink_me {
			animation: blinker 1s linear infinite;
		  }
		@keyframes blinker {
			50% {
			  opacity: 0;
			}
		}

	</style>
{/style}

{<extraStrip}
	{>"partials/extraStrip" /}
{/extraStrip}

{<infoStrip}
	{!>"partials/infoStrip" /!}
{/infoStrip}

