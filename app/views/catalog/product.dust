				{/model.hideSubmodel}
				{/model.details}
				<li><b>Part Number:</b> {model.partNumber}</li>

				<li><b>Selected Fabric:</b> <a href="/covers/fabric/{model.section}" target="_blank">{model.name}</a></li>
				<li><b>Selected Fabric Color:</b> {model.colors}
					{?model.isMultiColor}
						{~s}({model.topColor} / {model.sideColor})
					{/model.isMultiColor}
				</li>

				<li><b>Warranty:</b> {model.warranty}</li>
				<li><b>Description:</b> {model.description|s} (<a href="/covers/fabric/{model.section}" target="_blank">Details</a>)</li>

